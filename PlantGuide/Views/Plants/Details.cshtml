@model PlantGuide.Models.Plant
@{
    ViewData["Title"] = "Информация о растении";
}

<h2 style="margin-bottom:25px;">Информация о растении</h2>

<div class="detail-container">
    <div class="detail-photo">
        <img src="@Url.Content(Model.PhotoPath ?? "~/images/default.jpg")"
             alt="@Model.Name" />
    </div>

    <div class="detail-info">
        <h1>@Model.Name</h1>
        <h4 style="font-style:italic;color:var(--muted);margin-top:6px;">
            @Model.ScientificName
        </h4>

        <p style="font-weight:600;margin-top:18px;">@Model.Description</p>

        <h5 style="margin-top:22px;color:var(--muted);">Уход</h5>
        <p style="color:var(--muted);">@Model.CareInstructions</p>

        <div class="detail-buttons">
            <a class="btn-small btn-open"
               href="@Url.Action("Edit", new { id = Model.Id })">
                Редактировать
            </a>
            <a class="btn-small btn-ghost"
               href="@Url.Action("Index")">
                Назад
            </a>
        </div>
    </div>
</div>